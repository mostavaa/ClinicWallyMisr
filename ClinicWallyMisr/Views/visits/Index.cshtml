@model IEnumerable<ClinicWallyMisr.visit>

@{
    ViewBag.Title = "Index";
}

<h2>@ViewBag.patient.name</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { @id = ViewBag.patient.id })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.visitDate)
        </th>
        <th>
            Doctor
        </th>
        <th>Examinations</th>
        <th>Investigations</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.visitDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SystemPerson.name)
        </td>
        <td>
            @Html.ActionLink("Examinations", "Index", "examinations", new { id=item.id}, null)
        </td>
        <td>
            @Html.ActionLink("Investigations", "investigations", "visits", new { id = item.id }, null)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
